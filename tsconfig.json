{
	"compilerOptions": {
		"module": "Node16",
		"target": "ES2022",
		"types": [
			"node",
			"jest",
			"vscode"
		],
		"lib": [
			"ES2022"
		],
		"sourceMap": true,
		"rootDir": "src",
		"strict": true,
		"esModuleInterop": true,

	},
	"baseUrl": "src",
	"paths": {
		"*": [
			"*"
		]
	},
	"include": [
		"src/**/*",
		"test/**/*",
		"src/__mocks__"
	],
	"exclude": [
		"node_modules",
		"src/__mocks__"
	]
}