{
  "name": "angular-renamer",
  "displayName": "Angular Renamer",
  "icon":"assets/logo.png",
  "publisher": "salah-aldain",
  "description": "The Angular Renamer extension for Visual Studio Code is designed to simplify the process of renaming Angular components,pipe,directive,service. This extension automatically renames all along with all associated files and classes, saving you time and effort while ensuring consistency across your project.",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.40.0"
    },
  "categories": [
    "Other"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/salah-alhajj/angular-renamer/"
  },
  "activationEvents": [
  
      "onStartupFinished"
    
  ],
  "main": "./dist/extension.js",
  "contributes": {
  "configuration": {
          
    "title": "Angular Renamer",
    "properties": {


      "angular-renamer.renameSpecFileSettings": {
        "type": "boolean",
        "default": true,
        "description": "Rename the component's spec (test) file."
      },

        "angular-renamer.renameComponentsProjectInProjectFilesSettings": {
        "type": "boolean",
        "default": true,
        "description": "Rename the component's class name in All Project"
      }



        
        
      }}},
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },

  "devDependencies": {
    "@types/vscode": "^1.40.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "eslint": "^8.57.0",
    "esbuild": "^0.21.4",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.4.5",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0"
  }
}
